title: wikiList

\define wiki-list()

<table class="td-info-table">

<$list filter="[tag[wikilist]]" emptyMessage="Loading ...">

<<wiki-list-row>>

</$list>

</table>

\end
\define wiki-list-row()

<tr>

<td align="center">

	<$button message="dm-open-wiki" param=<<currentTiddler>> class="td-btn-invisible">
	<$list filter="[<currentTiddler>tagging[]field:type[image/png]]" emptyMessage="no image">
	<$image source=<<currentTiddler>> width="120"/>
	</$list>
	</$button>

</td>

<td>

<div class="td-info">

	<div class="td-title"><$view field="wikiTitle"><$view field="title"/></$view></div>
	<div class="td-url"><$view field="url"/></div>
	<div class="td-toolbar"><$list filter="[<currentTiddler>!has[isOpen]]" emptyMessage='<$button message="dm-open-wiki" param=<<currentTiddler>> class="td-open">activate</$button>'><$button message="dm-open-wiki" param=<<currentTiddler>> class="td-open">open</$button><$button message="dm-remove-wiki" param=<<currentTiddler>> class="td-remove">remove</$button></$list></div>

</div>

</td>

</tr>

\end
<div id="wikiList">

<<wiki-list>>

</div>

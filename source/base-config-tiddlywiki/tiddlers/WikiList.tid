title: WikiList

\define wiki-list()

<table class="td-info-table">

<$list filter="[tag[wikilist]!has[draft.of]]" emptyMessage="Loading ..." storyview="pop">

<<wiki-list-row>>

</$list>

</table>

\end
\define wiki-list-row()

<tr>

<td align="center">

	<$button message="dm-open-wiki" param=<<currentTiddler>> class="tc-btn-invisible">
	<$list filter="[[img of $(currentTiddler)$]!is[missing]]" emptyMessage="no image">
	<$image source="""img of $(currentTiddler)$""" width="120"/>
	</$list>
	</$button>

</td>

<td>

<div class="td-info">

	<div class="td-title"><$view field="page-title"><$view field="title"/></$view></div>
	<div class="td-url"><$view field="url"/></div>
	<div class="td-toolbar"><$button message="tiddlydesktop-open-wiki-url" param=<<currentTiddler>> class="td-open">open</$button><$button message="dm-remove-wiki" param=<<currentTiddler>> class="td-remove">remove</$button></div>

</div>

</td>

</tr>

\end
<div class="wikiList">

<<wiki-list>>

</div>

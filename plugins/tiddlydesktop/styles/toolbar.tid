.td-toolbar {
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
	color: #888;
    fill: #888;
	background-color: #d3d3d3;
	font-size: 0.9em;
	padding: 1em;
}

.td-toolbar-item {
    display: inline-block;
    margin-right: 1em;
}

.td-logo {
	height: 3em;
	vertical-align: middle;
}

.td-file-input-wrapper {
    position: relative;
    overflow: hidden;
    display: inline-block;
    vertical-align: middle;
    transition: -webkit-transform 300ms ease-in-out;
}

.td-file-input-wrapper input[type="file"] {
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    font-size: 999px;
    max-width: 100%;
    max-height: 100%;
    opacity: 0;
    outline: medium none;
    background: none repeat scroll 0% 0% #FFF;
    cursor: pointer;
    display: inline-block;
}

.td-file-input-wrapper:hover {
    -webkit-transform: scale(1.2,1.2);
}

.td-file-input-wrapper:hover button {
}
